<script type="text/javascript">
/*打开新窗口*/
function open_newindows(title,url,w,h){	
	parent.parent.layer.open({
		type: 2,
		area: [w+'px', h +'px'],
		fix: false, //不固定
		maxmin: true,
		shade:0.4,
		title: title,
		content: url
	});
}

/*
Cname:产品名称
Cpic：产品预览图
Caprice：产品实际售价
Cdprice：产品可折扣金额

该类商品是与第三方商城合作的商品，因此产品参数都由第三方商城制订，通过接品读取

*/
function choose_this(Cname,Cpic,Caprice,Cdprice){
	layer.confirm('是否要挑选“'+Cname+'”上架到您的商城？',function(index){
		var index = parent.layer.getFrameIndex(window.name); 
		parent.$('label#c_name').html(Cname);
		parent.$('img#thumbnail').attr('src',Cpic);		
		parent.layer.close(index);
		layer.msg('操作成功!',1);
	});	
	
}

</script> 
