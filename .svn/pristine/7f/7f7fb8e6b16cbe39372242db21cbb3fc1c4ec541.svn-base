{{include file="Common/header.html"}}



<div class="container liebiao">
{{foreach $list as $v}}
  <div class="col-md-4 col-sm-6 col-lg-3">
    <div class="card">
      <img src="{{$v->pic}}" alt="">
      <span class="caption">图片仅供参考，实际兑换礼品请以实物或您获取的服务为准</span>
      <a href="./commodity.php?method=get&id={{$v->id}}" class="card-heading"><strong>{{$v->subject}}</strong></a>
      <div class="card-content text-muted">
{{if $v->exchange==1}}      
        积分：<span>{{$v->score}}</span> 
{{else}} 
  积分：<span>{{$v->score}}</span>  现金：<span>{{$v->price}}</span>
{{/if}}       
      </div>
      <div class="card-actions">
        <button class="btn btn-danger" onclick="addandjumptocart({{$v->id}})"><i class="icon icon-shopping-cart"></i>&nbsp;兑换</button>
      </div>
    </div>
  </div>
{{/foreach}}
  

</div>






{{include file="Common/footer.html"}}