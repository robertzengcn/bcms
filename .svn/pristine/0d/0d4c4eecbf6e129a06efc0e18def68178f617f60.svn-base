  <div class="footer-hd ">
    <p> <a href="{{$index}}">商城首页</a> <b>|</b> <a href="tel:{{$contact.tel}}">联系我们</a> <b>|</b> <a href="#">帮助信息</a> <b>|</b> <a href="#">{{$contact.name}}版权所有</a> </p>
  </div>
</div> -->
  </div>
</div>






<div data-am-widget="gotop" class="am-gotop am-gotop-fixed" >
    <a href="#top" title="回到顶部">
        <span class="am-gotop-title">回到顶部</span>
          <i class="am-gotop-icon am-icon-chevron-up"></i>
    </a>
  </div>
  
  <div class="theme-popover-mask"></div>
  
</body>
</html>
<script>  
$(document).ready(function() {
    var u = navigator.userAgent;
    var isAndroid = u.indexOf('Android') > -1 || u.indexOf('Adr') > -1; //android终端
		if(isAndroid){
			html = '<li><a onclick="sendEventToNative()" style="font-size:14px;" >App首页</a></li>';
			 $(".am-avg-sm-1").append(html);
		}
});
  var data = '';
  function sendEventToNative(){
	api.sendEvent({
	  name: 'finish',
	  extra: data
	});
  }
</script>