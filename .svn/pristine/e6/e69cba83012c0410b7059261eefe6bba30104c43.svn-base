<!DOCTYPE HTML>
<html>
<head>
<meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
<meta name="format-detection" content="telephone=no"/>
<meta name="apple-mobile-web-app-capable" content="yes" >
<title>{{$seo->title}}</title>
<meta name="keywords" content="{{$seo->keywords}}" />
<meta name="description" content="{{$seo->description}}" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<link rel="stylesheet" type="text/css" href="{{$RESOURCE}}/css/technologylist.css">
{{include file="Common/common.html"}}
</head>
<body>
<!-- header -->
{{include file="Common/header.html"}}


<div class="listAll"  id="fenye">
{{foreach $list as $v}}
	<div class="box1 w320">
		<div class="tit">
			<h2><a href="{{$MOBILE}}/success.php?method=get&id={{$v->id}}" target="_blank">{{$v->subject}}</a></h2>
		</div>
		<div class="intro">{{$v->description}}</div>
		<dl>
			<dt class="fl">
			<img width="143" height="150" src="{{$smarty.const.UPLOAD}}{{$v->pic1}}">
			<img width="143" height="150" src="{{$smarty.const.UPLOAD}}{{$v->pic2}}">
			</dt>
		</dl>
		<p>{{$v->content|truncate:120}}
<a href="{{$MOBILE}}/success.php?method=get&id={{$v->id}}" target="_blank"><strong>[详情]</strong></a>	
		</p>
		<div class="btn">
		<a href="{{$contact.swt_link}}" target="_blank" ><img src="{{$RESOURCE}}/images/zx.jpg"></a>
		<a href="tel:{{$contact.tel}}"><img src="{{$RESOURCE}}/images/dh.jpg"></a></div>
	</div>
{{/foreach}}	
	

	<div class="w320">
	<!-- page -->
	{{include file="Common/page.html"}}
	</div>
</div>

<!-- footer -->
{{include file="Common/footer.html"}}
</body>
</html>