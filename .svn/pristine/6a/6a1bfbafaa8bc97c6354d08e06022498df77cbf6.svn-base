<script>  
$(document).ready(function() {
    var u = navigator.userAgent;
    var isAndroid = u.indexOf('Android') > -1 || u.indexOf('Adr') > -1; //android终端
		if(isAndroid){
			html = '<li><a onclick="sendEventToNative()" style="font-size:14px;" >App首页</a></li>';
			 $(".am-avg-sm-1").append(html);
		}
});
  var data = '';
  function sendEventToNative(){
	api.sendEvent({
	  name: 'finish',
	  extra: data
	});
  }
</script>
