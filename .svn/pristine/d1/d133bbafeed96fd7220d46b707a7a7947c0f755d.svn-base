var editor = UE.getEditor('editor',{
    toolbars: [
    [
		'source', //源代码
		'|',
        'undo', //撤销
        'redo', //重做
		'|',
        'bold', //加粗               
        'italic', //斜体
        'underline', //下划线
        'strikethrough', //删除线
        'subscript', //下标        
        'superscript', //上标		
		'|', 
		'link', //超链接
        'unlink', //取消链接
        '|',
        'fontsize', //字号 
		'forecolor', //字体颜色
        'backcolor', //背景色		
		'|', 	
        'simpleupload', //单图上传
        'insertimage', //多图上传      
        '|', 
        'emotion', //表情
        'spechars', //特殊字符 
		'scrawl', //涂鸦
		'horizontal', //分隔线        
		'|', 		
		'rowspacingtop', //段前距
        'rowspacingbottom', //段后距 
		'lineheight', //行间距                
        'autotypeset', //自动排版
		'|', 
		'indent', //首行缩进 
        'justifyleft', //居左对齐
        'justifyright', //居右对齐
        'justifycenter', //居中对齐
        'justifyjustify', //两端对齐
        '|', 
        'insertorderedlist', //有序列表
        'insertunorderedlist', //无序列表		   
        '|',       
        'imagenone', //默认
        'imageleft', //左浮动
        'imageright', //右浮动        
        'imagecenter', //居中
        '|',
		'cleardoc', //清空文档
        'preview', //预览  
		'searchreplace', //查询替换	 		
        'fullscreen', //全屏     

        
    ]
]
});
var editor = UE.getEditor('editor');
var gCommodity = new Commodity();
gCommodity.setThisName('gCommodity');
gCommodity.initEdit();
$('.skin-minimal input').iCheck({
	checkboxClass: 'icheckbox-blue',
	radioClass: 'iradio-blue',
	increaseArea: '20%'
});
</script>

</body>
</html>