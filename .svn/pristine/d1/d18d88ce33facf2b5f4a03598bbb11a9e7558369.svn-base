var oTable = null;
function Commodity() {
	BaseFunc.call(this);
	var self = this;
	// {{{ function initList()
	
	/**
	 * 初始化列表
	 * */
	this.initList = function() {
		$(function(){
			//table加载数据
			self.fillDataTable();
			$('body').on('change keyup click','#subject,#exchange,#status,#qry,#logmin,#logmax',function(){
				self.fillDataTable();
			});
		});
	}
//加载数据表
	this.fillDataTable = function() {
		$("#dataTable").grid({
			para:{controller:'Commodity',method:'query'},
			//datatable插件里设置列  
			aoColumnDefs : [
							{sClass:'text-c',aTargets:[0]},{sClass:'text-c',aTargets:[1]},{sClass:'text-c',aTargets:[3]},{sClass:'text-c',aTargets:[4]},{sClass:'text-c',aTargets:[5]},{sClass:'text-c',aTargets:[6]},{sClass:'text-c',aTargets:[7]},{sClass:'text-c',aTargets:[8]},{sClass:'text-c',aTargets:[9]},{sClass:'text-c',aTargets:[10]}
							],
			field : [
			            {
			            	data : 'id',
			            	render : function (id, type, row) {
			            		return '<input type="checkbox" name="tr_'+id+'" id="tr_'+id+'" value="'+id+'">';
			            	}
			            },
                        { data: 'id' },
			            { data: 'subject' },
			            { data: 'quantity'},
			            { data: 'salenum' },
			            { data: 'exchange' ,
			              render: function(id, type, row){
				            	  var part = '';
				            	  if(row.exchange == 1){
				            		  part += '纯积分';
				            	  }else{
				            		  part += '积分+现金'; 
				            	  }
				            	  return part;
			              }
			              
			             },
			            { data: 'score'},
			            { data: 'price'},
			            { data: 'statu',
			            	render:function(id, type, row){
			            		if(row.statu==0){
			            			return '<span class="label label-default radius">已下架</span>';
			            		}else{
			            			return '<span class="badge badge-success radius">上架中</span>';									
								}
			            }},			            
			            { data: 'start_time'},
			            { data: 'end_time'},
			            {
						  data: 'id',
						  orderable: false,
						  render : function(id, type, row){
							  var str = '';
							  str += '<a style="text-decoration:none" " onClick="gCommodity.detail('+row.id+','+row.types+');" href="javascript:;" title="详细"><i class="Hui-iconfont">&#xe695;</i></a>'; 
				              str += '<a style="text-decoration:none" class="ml-5" onClick="gCommodity.edit('+row.id+','+row.types+');" href="javascript:;" title="编辑"><i class="Hui-iconfont">&#xe6df;</i></a>';
				              str += '<a style="text-decoration:none" class="ml-5" onClick="gCommodity.del(this,'+id+');" href="javascript:;" title="删除"><i class="Hui-iconfont">&#xe6e2;</i></a>';
					    	  return str;
						  }
						 }
			        ]
		});
	}
	
	/*
	 * 添加新的医疗服务
	 * 
	 * */
	this.addservice=function(){
		
		$('#qrcodepic').hide();
		$('.disdiv').hide();
		self.cmd(gHttp,{controller:'Commodity',method:'get_cat'},function(result1){
			if(result1.statu){
				if(result1.data!=null){
					var html='<option value="">请选择</option>';
					$.each(result1.data,function(i,v){
					html+='<option value="'+v.id+'">'+v.name+'</option>';	
					});
					$('#catalogue').html(html);
					
				}
			}
		});

		
		
		
		$('body').on('click','#save',function(){			
			var theurl=$('#thumbnail').attr('src');
			$('#pic').val(theurl);
			post = {controller:'Commodity',method:'add'};
			$('#formEdit').checkAndSubmit('save',post,function(result1){
				if(result1.statu){				
					var url=parent.location.href;
					parent.location.replace(url);
					parent.layer.alert('操作成功!',{icon: 1});	
					layer_close();
				}else{
					parent.layer.alert(result1.msg,{icon:2});
				}
				return false;
			});
			
			
		});
	}

	/**
	 * 初始化编辑
	 * */
	this.initEdit = function() {
			//获取参数
