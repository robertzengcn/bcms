					var price=parseInt($('#price').val());
					var discount=parseInt($('#discount').val());					
					if(price<=discount){
						layer.alert(
							   '折扣金额不能大于售价',
							   function(index){
								   $('#discount').focus();
								   layer.close(index);							   
