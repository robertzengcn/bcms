					$('#img_list .add').hide();
				}
			});	
			//轮播图 删除
			$('body').on('click','.js_delete',function(){
				var id = $(this).parent().parent().attr('id');
				var len = $('#img_list li').length;				
				$('#'+id).remove();
				self.initId(len);
				if(len<10){
					$('#img_list .add').show();
				}
			});			
			//保存
			$('#save').click(function(){
