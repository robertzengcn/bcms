            },
            cancel: function () {
                // 用户取消分享后执行的回调函数
            }
        });

        //分享给朋友
        wx.onMenuShareAppMessage({
            title: "{{$voteinfo->title}}", // 分享标题
            desc: "{{$voteinfo->fxms}}", // 分享描述
