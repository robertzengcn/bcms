/**
 * SEO管理-添加其它代码
 * */
function ThirdStat() {
	BaseFunc.call(this);
	var self = this;
	
	// {{{ function initList()
	
	/**
	 * 初始化列表
	 * */
	this.initList = function() {
		$(function(){
			//table加载数据
			self.fillDataTable();
		});
	}
	
	// }}}
	// {{{ function initEdit()
	/**
	 * 初始化编辑
	 * */
	this.initEdit = function() {
		$(function(){
			self.onloadCss();
			
			//获取参数
			var para = self.parseUrl(window.location.href);
			if (para.id != undefined) {
				//有id，则是编辑
				$("#id").val(para.id);
				self.cmd(gHttp,{controller:'ThirdStat',method:'get',id:para.id},function(result1){
					if(result1.statu){
						$('#formEdit').frmFill('',result1.data);
					}else{
						layer.alert(result1.msg);
					}
				});
			}
			
			//保存
			$('#save').click(function(){
				self.save();
			});
			
			//返回
			$('#back').click(function(){
				layer_close();
			});
			
		});
	}
	
	// }}}
    // {{{ function onloadCss()
	
	/**
	 * 加载css
	 * */
	this.onloadCss = function() {
		$('.skin-minimal input').iCheck({
			checkboxClass: 'icheckbox-blue',
			radioClass: 'iradio-blue',
			increaseArea: '20%'
		});
	}
	
	// }}}
	// {{{ function fillDataTable()
	
	/**
	 * 加载数据表
	 * */
	this.fillDataTable = function() {
		$("#dataTable").grid({
			para:{controller:'ThirdStat',method:'query'},
			aoColumnDefs : [
				{sClass:'text-c',aTargets:[0]},{sClass:'text-c',aTargets:[1]},{sClass:'text-c',aTargets:[3]},{sClass:'text-c',aTargets:[4]}
							],
			field : [
			            {
			            	data : 'id',
			            	render : function (id, type, row) {
			            		return '<input type="checkbox" name="tr_'+id+'" id="tr_'+id+'" value="'+id+'">';
			            	}
			            },
                        { data: 'id' },
			            { data: 'subject' },
			            { data: 'isuse',render:function(value){return value=='1'?'<span class="label label-success radius">使用中</span>':'<span class="label label-default radius">己停用</span>';}},
			            {
						  data : 'id',
						  render : function(id, type, row){
							  var str = '';
				              str += '<a style="text-decoration:none" class="ml-5" onClick="gThirdStat.edit('+id+');" href="javascript:;" title="编辑"><i class="Hui-iconfont">&#xe6df;</i></a>';
				              str += '<a style="text-decoration:none" class="ml-5" onClick="gThirdStat.del(this,'+id+');" href="javascript:;" title="删除"><i class="Hui-iconfont">&#xe6e2;</i></a>';
					    	  return str;
						  }
						 }
			        ]
		});
	}
	
	// }}}
	
	//单个删除
	this.del = function(obj, id) {
		self.openDel(obj,{controller:'ThirdStat',method:'del',id:id});
	}
	
	//批量删除
	this.delBatch = function(obj) {
		var ids = $("#dataTable").getSelectedAll();
		self.openDel(obj,{controller:'ThirdStat',method:'del',id:ids});
	}

	//动态编辑
	this.edit = function(id){
		self.openEditWID('编辑网站代码', 'statstool-edit.html?id=' + id ,'700','440');
	}
	
	// {{{ function save()
	
	/**
	 * 保存
	 * */
	this.save = function(){
		var post = {};
		var id = $("#id").val();
		if (id == '') {
			post = {controller:'ThirdStat',method:'add'};
		} else {
			post = {controller:'ThirdStat',method:'edit',id:id};
		}
		$('#formEdit').frmPost(post,function(result1){
			if(result1.statu){
				var url=parent.location.href;
				parent.location.replace(url);
				parent.layer.msg('操作成功!',{icon: 1});	
				layer_close();
				
				
			}else{
				parent.layer.alert(result1.msg,{icon:2});
			}
			return false;
		});
	}
	
	// }}}
}
