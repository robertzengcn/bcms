			throw new ValidatorException(144);
		}
		$arr = explode('-',$_REQUEST['restime']);
		if (! $reservation->isHours($arr[0])) {
			throw new ValidatorException(132);
		}
		if(isset($_REQUEST['name'])&&strlen($_REQUEST['name'])>0){
			$name=$_REQUEST['name'];
