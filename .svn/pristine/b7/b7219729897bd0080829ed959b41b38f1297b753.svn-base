/* CSS Document */
input.keywords{color:#b3b3b3;}

/*for static*/
.tabBar-boyicms{border-bottom:2px solid #999;}
a.mgl-18{margin-left:18px;}
.mv-30{margin:30px 0px 30px 0px;}
.boyicms-br{border-bottom: 2px solid #999;}

/*for pop_edit*/
label.for-notes{cursor: text;margin-top: 3px;padding-right: 10px;text-align: left;color:#646464;}/*说明标签用*/

/*for bottom button position*/
div.ps-b-5{position:fixed!important;position:absolute;z-index:999;bottom:1px;left:0;width:100%;border-top:2px solid #ddd;}

/*for plugins patient manage*/
.patientmanage{height:auto;font-size:14px;}

/*for addPatient.html*/
.addpatient_bt{float:left;}

/*所有弹出框按钮样式修正*/
.bt-normal{height:auto;font-size:14px;}

/*全后台右侧悬浮框*/
.pof-floating{ bottom:2em; right:1em; overflow:hidden;z-index:999;}
.pof-floating li{ opacity:0.5;width:40px; height:36px; margin-top:5px;}
.pof-floating li:hover{ opacity:1;}
.pof-floating .floating1{ background-image:url(../../images/boyicms/floatingbox/1.png);}
.pof-floating .floating2{ background-image:url(../../images/boyicms/floatingbox/2.png);}
.pof-floating .floating3{ background-image:url(../../images/boyicms/floatingbox/3.png);}
.pof-floating .floating4{ background-image:url(../../images/boyicms/floatingbox/4.png);}

/*页面上传图片功能*/

div.thumbnailbox{width:154px; height:104px;border:1px solid #CECECE;padding:2px;position:relative;float:left;}
div.thumbnailbox img {height:100px;margin:2px;}
div.thumbnailbox .img-btn{background: rgba(0, 0, 0, 0.5) none repeat scroll 0 0;left: 0;overflow: hidden;position: absolute;top: 0;width: 100%;z-index: 300;height:0px;}
.thumbnailbox span{cursor: pointer;display: inline;float: right;height: 24px;margin: 5px 1px 1px;overflow: hidden;text-indent: -9999px;width: 24px; background: rgba(0, 0, 0, 0) url(../../lib/webuploader/0.1.5/images/icons.png) no-repeat scroll -46px -22px;}


/*模板管理*/
.template-area li {
    float: left;
    height: 162px;
    margin-right: 20px;
    margin-top: 20px;
    position: relative;
    width: 162px;
}
.Tdetial {
    background-color: #fff;
    border: 2px solid #ccc;
    border-radius: 5px;
    height: 158px;
    left: 0;
    position: absolute;
    top: 0;
    width: 158px;
}
.temp-title{
	width:100%;
	height:0px;
	position:absolute;
	top:1px;
	left:0px;
	background:rgba(0, 0, 0, 0.5) none repeat scroll 0 0;
	font-size:14px;
	text-indent:1em;
	line-height: 30px;
	z-index:999;
	color:#FFFFFF;
	font-weight:bolder;
	overflow:hidden;
	
}
.picbox {
    display: table-cell;
    height: 156px;   
    overflow: hidden;
    text-align: center;
    vertical-align: middle;
    width: 154px;
	position:absolute;
	top:2px;
	left:2px;
}
.picbox img{
	width:154px;
	height:156px;
}
.bt-area {
    background-color: #ccc;
    border-radius: 3px;
    color: #666;
    font-size: 14px;
    height: 30px;
    line-height: 30px;    
    text-align: center;
    width: 100%;
	position:absolute;
	bottom:0px;
	left:0px;
	z-index:500;
}


/**进度条*/
.static-progress,.static-progress-bar,.sr-only{height:10px; font-size:0;line-height:0}
.static-progress{overflow:hidden; -khtml-border-radius:6px;-ms-border-radius:6px;-o-border-radius:6px;-moz-border-radius:6px;-webkit-border-radius:6px;border-radius:6px}
.static-progress-bar{width:100%;background-color:#efefef}
.sr-only{display:inline-block; background-color:#58b957}
h1{font-size:12px;height:25px;line-height:25px;text-align:left;}


/**患者管理关闭*/
.closebtn{width:25px;height:25px;border:1px solid red;position: absolute;top:-22px;right:-32px;text-align:center;line-height:25px;}
