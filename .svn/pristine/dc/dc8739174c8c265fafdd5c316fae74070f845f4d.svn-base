            <div class="attr-list-hd tm-clear">
              <h4>产品概述:</h4>
            </div>
            <div class="clear"></div>
            <ul id="J_AttrUL">
              <li title="">&nbsp;{{$info->data->description}}</li>
            </ul>
            <div class="clear"></div>
          </div>
          <div class="details">
