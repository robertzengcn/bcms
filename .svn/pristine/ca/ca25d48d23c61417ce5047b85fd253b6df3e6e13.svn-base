				</div>
</div>
<script type="text/javascript" src="../lib/jquery/1.9.1/jquery.min.js"></script> 
<script type="text/javascript" src="../lib/layer/1.9.3/layer.js"></script> 
<script type="text/javascript" src="../lib/laypage/1.2/laypage.js"></script>
<script type="text/javascript" src="../lib/My97DatePicker/WdatePicker.js"></script> 
<script type="text/javascript" src="../lib/datatables/1.10.0/jquery.dataTables.min.js"></script> 
<script type="text/javascript" src="../js/H-ui.js"></script> 
<script type="text/javascript" src="../js/H-ui.admin.js"></script>
<script type="text/javascript" src="../js/boyicms/common.js"></script>
<script type="text/javascript" src="/hcc/h5/js/echarts.min.js"></script>
<script type="text/javascript" src="../js/boyicms/show.js"></script>
<script>
var gH5 = new H5();
gH5.setThisName('gH5');
gH5.initDetail();

var timeline = $("#timeline").val();
var appmessage=$("#appmessage").val();
var qq = $("#qq").val();
var qzone=$("#qzone").val();
var weibo=$("#weibo").val();
var other=$("#other").val();

var myChart = echarts.init(document.getElementById('main'));
option = {
    tooltip: {
        trigger: 'item',
        formatter: "{a} <br/>{b}: {c} ({d}%)"
    },
    color:['#49d5b2', '#f7c15d','#ff79a2','#5bc6fa','#facd4c','#8d91ff'],
    legend: {
        orient: 'vertical',
        x: 'right',
        data:['微信朋友圈','微信朋友','QQ好友','QQ空间','微博','其他']
    },
    series: [
        {
            name:'分享渠道',
            type:'pie',
            radius: ['50%', '70%'],
            avoidLabelOverlap: false,
            label: {
                normal: {
                    show: false,
                    position: 'center'
                },
                emphasis: {
                    show: true,
                    textStyle: {
                        fontSize: '30',
                        fontWeight: 'bold'
                    }
                }
            },
            labelLine: {
                normal: {
                    show: false
                }
            },
            data:[
                {value:timeline, name:'微信朋友圈'},
                {value:appmessage, name:'微信朋友'},
                {value:qq, name:'QQ好友'},
                {value:qzone, name:'QQ空间'},
                {value:weibo, name:'微博'},
                {value:other, name:'其他'}
            ]
        }
    ]
};
myChart.setOption(option);
</script>
