<title>添加案例</title>
</head>
<body>
<div class="pd-20">
	<form action="" method="post" class="form form-horizontal" id="formEdit">
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>标题：</label>
			<div class="formControls col-8">
			    <input type="hidden" id="id" name="id" value="">
				<input type="text" class="input-text" value="" placeholder="" name="subject" nullmsg="标题不能为空" datatype="*2-90">
			</div>
			<div class="col-2"> </div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">术前：</label>						
			<div class="formControls col-91">
				<a class="btn btn-primary radius" onClick="gSuccess.uploadImg('上传图片','../js/boyicms/uploadimg.html?pid=pre-operative','720','460')" href="javascript:;"><i class="Hui-iconfont">&#xe600;</i> 上传图片</a>
			</div>
			<div class="thumbnailbox">
				<img src="../images/boyicms/logo/thumbnail_auto.gif" flag="../images/boyicms/logo/thumbnail_auto.gif" id="pre-operative" width="150px"/><div class="img-btn"><span class="cancel" id="delete-thisimg">删除</span></div>
			</div> 
			<input id="pic1" type="hidden" name="pic1" >
            <input id="click_count" type="hidden" name="click_count">
            <input id="plushtime" type="hidden" name="plushtime">
		</div><!--上传图片-->
		<div class="row cl">
			<label class="form-label col-2">术后：</label>						
			<div class="formControls col-91">
				<a class="btn btn-primary radius" onClick="gSuccess.uploadImg('上传图片','../js/boyicms/uploadimg.html?pid=aft-operative','720','500')" href="javascript:;"><i class="Hui-iconfont">&#xe600;</i> 上传图片</a>
			</div>
			<div class="thumbnailbox">
				<img src="../images/boyicms/logo/thumbnail_auto.gif" flag="../images/boyicms/logo/thumbnail_auto.gif" id="aft-operative" width="150px"/><div class="img-btn"><span class="cancel" id="delete-thisimg">删除</span></div>
			</div> 
			<input id="pic2" type="hidden" name="pic2" >
		</div><!--上传图片-->
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>所属科室：</label>	
			<div class="formControls col-2"> <span class="select-box">
				<select name="department_id" id="department_id" class="select" check="muset">
					<option value="0">请选择</option>
				</select>
				</span> </div>
			<label class="form-label col-2"><span class="c-red">*</span>所属疾病：</label>	
			<div class="formControls col-2"> <span class="select-box">
				<select name="disease_id" id="disease_id" class="select" check="muset">
					<option value="0">请选择</option>
				</select>
				</span> </div>
						
			<label class="form-label col-2"><span class="c-red">*</span>竞价：</label>
			<div class="formControls col-91 skin-minimal"><!--add col-91 css-->
				<div class="radio-box">
					<input type="radio" id="isbidding1" value="1" name="isbidding" datatype="*" nullmsg="">
					<label for="isbidding1">是</label>
				</div>
				<div class="radio-box">
					<input type="radio" id="isbidding2" value="0" name="isbidding" checked>
					<label for="isbidding2">否</label>
				</div>
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">来源：</label>
			<div class="formControls col-4">
				<input type="text" class="input-text" value="" placeholder="一般填入医院网站名称或域名" nullmsg="文章来源不能为空"  name="source" datatype="*4-16" >
			</div>
			<div class="col-2"> </div>
		</div>
		
		<div class="row cl">
			<label class="form-label col-2">选择推荐位：</label>
			<div class="formControls col-10 skin-minimal" id="recommendposition"></div>
		</div>		
		<div class="row cl">
			<label class="form-label col-2">SEO标题：</label>
			<div class="formControls col-10">
				<input type="text" class="input-text " value="" placeholder="标题不要超过50字" id="seo_title" name="title" >
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">关键词：</label>
			<div class="formControls col-10">
				<input type="text" class="input-text" value="" placeholder="多个关键词间请用“,”区分开......" id="keywords" name="">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">案例简介：</label>
			<div class="formControls col-10">
				<textarea id="seo_desc" name="description" cols="" rows="" class="textarea"  placeholder="请输入案例内容的简要描述..." datatype="*10-200" dragonfly="true" nullmsg="简介不能为空！" onKeyUp="textarealength(this,200)"></textarea>
				<p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
			</div>
		</div>

		
		<div class="row cl">
			<label class="form-label col-2">详细内容：</label>
			<div class="formControls col-10"> 
				<script id="editor" check="must" title="请输入内容" name="content" type="text/plain" style="width:100%;height:400px;"></script> 
			</div>
		</div>
		<div class="row cl">
			<div class="col-10 col-offset-2">
				<button class="btn btn-primary radius" type="button" id="save"><i class="Hui-iconfont">&#xe632;</i> 保存</button>				
				<button class="btn btn-default radius" type="button" id="back">&nbsp;&nbsp;取消&nbsp;&nbsp;</button>
			</div>
		</div>
	</form>
</div>
<script type="text/javascript" src="../lib/jquery/1.9.1/jquery.min.js"></script> 
<script type="text/javascript" src="../lib/layer/1.9.3/layer.js"></script> 
<script type="text/javascript" src="../lib/My97DatePicker/WdatePicker.js"></script> 
<script type="text/javascript" src="../lib/icheck/jquery.icheck.min.js"></script> 
<script type="text/javascript" src="../lib/Validform/5.3.2/Validform.min.js"></script> 
<script type="text/javascript" src="../lib/webuploader/0.1.5/webuploader.min.js"></script> 
<script type="text/javascript" src="../lib/ueditor/1.4.3/ueditor.config.js"></script> 
<script type="text/javascript" src="../lib/ueditor/1.4.3/ueditor.all.min.js"> </script> 
<script type="text/javascript" src="../lib/ueditor/1.4.3/lang/zh-cn/zh-cn.js"></script> 
<script type="text/javascript" src="../js/H-ui.js"></script> 
<script type="text/javascript" src="../js/H-ui.admin.js"></script> 
<script type="text/javascript" src="../js/boyicms/common.js"></script>
<script type="text/javascript" src="../js/boyicms/success.js"></script>
<script type="text/javascript">
var editor = UE.getEditor('editor');
var gSuccess = new Success();
gSuccess.setThisName('gSuccess');
gSuccess.initEdit();

</script>
</body>
</html>