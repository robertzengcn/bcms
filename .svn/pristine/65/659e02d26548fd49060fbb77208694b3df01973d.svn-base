<script type="text/javascript">
$(function(){
	$('.skin-minimal input').iCheck({
		checkboxClass: 'icheckbox-blue',
		radioClass: 'iradio-blue',
		increaseArea: '20%'
	});
	$('#morning').iCheck('check');
	

	
	$(".form").Validform({
		tiptype:2,
		ajaxPost:true,
		btnSubmit:'.bt-normal',
		datatype:{
			"need1":function(gets,obj,curform,regxp){
				
				
					reg=/^([0-2][0-9]|[0-9])\:[0-9][0-9]$/;
					if(reg.test(gets)){return true;}else{
						return false;
					}
					
				
			},
			"need2":function(gets,obj,curform,regxp){
				
				
					reg=/^([0-2][0-9]|[0-9])\:[0-9][0-9]$/;
					if(reg.test(gets)){
						
						return true;}else{
						return false;
					}
					
				
			},
//			"need3": function(gets, obj, curform, regxp){
//					reg='^([1-9]{1})(\d{0,2})$';
//					if(reg.test(gets)){
//						
//						return true;}else{
//						return false;
//					}
//			}
			},
		callback:function(data){
			//alert(data);
			if(data.statu){
				window.parent.troad('#reservationtable');
				var index = parent.layer.getFrameIndex(window.name);
				
				parent.layer.close(index);
			}else{
									layer.msg(data.msg, function(){					
									}); 
			}

		}
	});
	

	
});
</script>
