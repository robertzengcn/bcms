	// {{{ function showDivPosition()
	
	/**
	 * 定位div
	 * */
	this.showDivPosition = function(obj, type, val){
		if (type == 'width') {
        	obj.style.width = val + 'px';
        } else if (type == 'height') {
        	obj.style.height = val + 'px';
        } else if (type == 'left') {
        	obj.style.left = val + 'px';
        } else if (type == 'top') {
        	obj.style.top = val + 'px';
        }
	}
	
