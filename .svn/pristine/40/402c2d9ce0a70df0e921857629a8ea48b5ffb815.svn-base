/* CSS Document */

body {
    font-size: 16px;
    font-family: Microsoft YaHei,宋体;
    color: #333;
    text-align: center;
    line-height: 28px;
}
ul{padding:0px;margin:0px;list-style:none;}
a {text-decoration:none;color:#000000;}
img {border:none;margin:0px;padding:0jpx;}
h1,h2,h3,h4,h5,h6,p{margin:0px;padding:0px;font-weight:normal;}
section{display:block;margin:0px;padding:0px;}
div.clearbox{clear:both;width:100%;height:1px;}


/*soso css*/

#search,#searchform{width:100%;height:36px;line-height:36px;}
#search{position:fixed;bottom:2px;}
.searchbox{background:url(../i/search-bg.png) no-repeat;height:36px;line-height:36px;width:304px;margin:0 auto;text-align:left; position:relative;}
.searchbox input{background:none;height:32px;font-size:14jpx;color:#999999;border:none;}
.searchbox a{font-size:16px;color:#ffffff;position:absolute;left:86%;}


/*header css*/
#page{overflow:hidden;}
#page header{width:100%;height:50px;background:#289ABC;color:#FFFFFF;}
#page header h1{font-size:18px;max-width:50%;line-height:50px;text-align:left;overflow: hidden;float:left;height:50px;}
.logo_back,.homenav,.logo_link {width:20px;height:20px;text-indent:-999;margin:15px 6px;}
.logo_back{background:url(../i/backimg.png)  no-repeat;float:left;-moz-background-size:20px 20px; /* 老版本的 Firefox */background-size:20px 20px;text-indent:-999px;}
.logo_link{background:url(../i/logo.png)  no-repeat;float:left;-moz-background-size:20px 20px; /* 老版本的 Firefox */background-size:20px 20px;text-indent:-999;}
.homenav {background:url(../i/homeimg.png) no-repeat;float:right;-moz-background-size:20px 20px; /* 老版本的 Firefox */background-size:20px 20px;}