<title>添加案例</title>
</head>
<body>
<div class="pd-20">
	<form action="" method="post" class="form form-horizontal" id="formEdit">
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>标题：</label>
			<div class="formControls col-8">
			    <input type="hidden" id="id" name="id" value="">
			    <input type="hidden" id="title"  value="success">
				<input type="text" id="subject" class="input-text" value="" placeholder="" name="subject" nullmsg="标题不能为空" datatype="*2-50" errormsg="限2-50字"/>
			</div>
			<div class="col-2"></div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">术前：</label>						
			<div class="formControls col-91">
				<a class="btn btn-primary radius" onClick="gSuccess.uploadImg('上传图片','../js/boyicms/uploadimg.html?method=uploadPic&dir=success&ipn=pre-operative','720','460')" href="javascript:;"><i class="Hui-iconfont">&#xe600;</i> 上传图片</a>
			</div>
			<div class="thumbnailbox">
				<img src="../images/boyicms/logo/thumbnail_auto.gif" flag="../images/boyicms/logo/thumbnail_auto.gif" id="pre-operative" width="150px"/><div class="img-btn"><span class="cancel" id="delete-thisimg">删除</span></div>
			</div> 
			<input id="pic1" type="hidden" name="pic1" class="pre-operative"/>            
		</div><!--上传图片-->
		<div class="row cl">
			<label class="form-label col-2">术后：</label>						
			<div class="formControls col-91">
				<a class="btn btn-primary radius" onClick="gSuccess.uploadImg('上传图片','../js/boyicms/uploadimg.html?method=uploadPic&dir=success&ipn=aft-operative','720','460')" href="javascript:;"><i class="Hui-iconfont">&#xe600;</i> 上传图片</a>
			</div>
			<div class="thumbnailbox">
				<img src="../images/boyicms/logo/thumbnail_auto.gif" flag="../images/boyicms/logo/thumbnail_auto.gif" id="aft-operative" width="150px"/><div class="img-btn"><span class="cancel" id="delete-thisimg">删除</span></div>
			</div> 
			<input id="pic2" type="hidden" name="pic2" class="aft-operative"/>
		</div><!--上传图片-->
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>所属科室：</label>	
			<div class="formControls col-2"> <span class="select-box">
				<select name="department_id" id="department_id" class="select" nullmsg="科室不能为空" datatype="*">
					<option value="">请选择</option>
				</select>
				</span> </div><div class="col-2"> </div>
			<label class="form-label col-2"><span class="c-red">*</span>所属疾病：</label>	
			<div class="formControls col-2"> <span class="select-box">
				<select name="disease_id" id="disease_id" class="select" nullmsg="疾病不能为空" datatype="*">
					<option value="">请选择</option>
				</select>
				</span> </div><div class="col-2"> </div>
						
			<label class="form-label col-2">竞价：</label>
			<div class="formControls col-91 skin-minimal"><!--add col-91 css-->
				<div class="radio-box">
					<input type="radio" id="isbidding1" value="1" name="isbidding"/>
					<label for="isbidding1">是</label>
				</div>
				<div class="radio-box">
					<input type="radio" id="isbidding2" value="0" name="isbidding" checked="checked"/>
					<label for="isbidding2">否</label>
				</div>
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">文章来源：</label>
			<div class="formControls col-92">
				<input type="text" class="input-text" value="" placeholder="一般填入医院网站名称或域名" nullmsg="来源不能为空"  name="source"/>
			</div>
			<div class="col-2"> </div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">显示位：</label>
			<div class="formControls col-10 skin-minimal" id="show_position"></div>
		</div>
		
		<div class="row cl">
			<label class="form-label col-2">选择推荐位：</label>
			<div class="formControls col-8 skin-minimal" id="recommendposition"></div>
		</div>		
		<div class="row cl">
			<label class="form-label col-2">SEO标题：</label>
			<div class="formControls col-8">
				<input type="text" class="input-text " value="" placeholder="标题不要超过50字" id="seo_title" name="title" errormsg="限2-50字" datatype="*2-50" nullmsg="title不能为空"/>
			</div><div class="col-3"> </div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">关键词：</label>
			<div class="formControls col-8">
				<input type="text" class="input-text" value="" placeholder="多个关键词间请用“,”区分开......" id="keywords" name="keywords">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">案例简介：</label>
			<div class="formControls col-8">
				<textarea id="seo_desc" name="description" cols="" rows="" class="textarea"  placeholder="请输入案例内容的简要描述..." datatype="*10-200" dragonfly="true" nullmsg="简介不能为空！" onKeyUp="textarealength(this,200)" errormsg="限10-200字"></textarea>
				<p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
			</div><div class="col-3"> </div>
		</div>

		
		<div class="row cl">
			<label class="form-label col-2">详细内容：</label>
			<div class="formControls col-8">				
				<textarea nullmsg="详细内容不能为空！" style="width:100%;height:400px;" id="editor" name="content" datatype="*"></textarea> 
			</div><div class="col-3"> </div>
		</div>
		<div class="row cl">
			<div class="col-10 col-offset-2">
				<button class="btn btn-primary radius" type="button" id="save"><i class="Hui-iconfont">&#xe632;</i> 保存</button>				
				<button class="btn btn-default radius" type="button" id="back">&nbsp;&nbsp;取消&nbsp;&nbsp;</button>
			</div>
		</div>
	</form>
</div>
<!--悬浮框按钮-->
