<title>添加资讯</title>
</head>
<body>
<div class="pd-20">
	<form action="" method="post" class="form form-horizontal" id="formEdit">
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>标题：</label>
			<div class="formControls col-8">
			    <input type="hidden" id="id" name="id" value="">
				<input type="text" class="input-text" value="" placeholder="" id="subject" name="subject" nullmsg="标题不能为空" datatype="*2-50" errormsg="限2-50个字" />
			</div>
			<div class="col-2"></div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">缩略图：</label>						
			<div class="formControls col-91">
				<a class="btn btn-primary radius" onClick="layer_show('上传图片','../js/boyicms/uploadimg.html?method=uploadPic&dir=article','720','460')" href="javascript:;"><i class="Hui-iconfont">&#xe600;</i> 上传图片</a>
			</div>
			<div class="thumbnailbox">
				<img src="../images/boyicms/logo/thumbnail_auto.gif" flag="../images/boyicms/logo/thumbnail_auto.gif" id="thumbnail" width="150px"/><div class="img-btn"><span class="cancel" id="delete-thisimg">删除</span></div>
			</div> 
			<input type="hidden" id="pic" name="pic"/>
		</div><!--上传图片-->
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>所属科室：</label>	
			<div class="formControls col-2"> <span class="select-box">
				<select name="department_id" plugin="jqtransform" datatype="*"  nullmsg="请选择科室" id="department_id" class="select"></select>
				</span> </div><div class="col-2"></div>
			<label class="form-label col-2"><span class="c-red">*</span>所属疾病：</label>	
			<div class="formControls col-2"> <span class="select-box">
				<select plugin="jqtransform" datatype="*" nullmsg="请选择所属疾病" name="disease_id" id="disease_id" class="select">
					<option value="">请选择</option>
				</select>
				</span> </div><div class="col-2"></div>
			<label class="form-label col-2">责任编辑：</label>	
			<div class="formControls col-2"> <span class="select-box">
				<select plugin="jqtransform"  name="doctor_id" id="doctor_id" class="select">
					<option value="0" id="doc">默认值</option>
				</select>
				</span> </div>			
		</div>
		<div class="row cl">
			<label class="form-label col-2">竞价：</label>
			<div class="formControls col-91 skin-minimal"><!--add col-91 css-->
				<div class="radio-box">
					<input type="radio" id="isbidding1" name="isbidding"  value="1">
					<label>是</label>
				</div>
				<div class="radio-box">
					<input type="radio" id="isbidding2" name="isbidding" value="0" checked="checked"/>
					<label>否</label>
				</div>
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">文章来源：</label>
			<div class="formControls col-92">
				<input type="text" class="input-text" value="" placeholder="一般填入医院网站名称或域名" name="source"/>
			</div><div class="col-2"></div>		
		</div>
		<div class="row cl">
			<label class="form-label col-2">设置相关文章：</label>
			<div class="formControls col-10 skin-minimal">
				<div class="check-box">
					<input type="checkbox" id="checkbox-moban">
					<label for="checkbox-moban">&nbsp;</label>
				</div>
				<button onClick="gArticle.toRelationship();" class="btn btn-success radius ml-10"><i class="Hui-iconfont">&#xe616;</i> 开始添加</button>
				<span id="selectName"></span>
                <input id="relation" type="hidden" name="relation" value="">
			</div>
		</div>
        <div class="row cl">
			<label class="form-label col-2">显示位：</label>
			<div class="formControls col-10 skin-minimal" id="show_position"></div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">新浪微博同步：</label>
			<div id="weidiv" class="formControls col-10 skin-minimal">
				<div id="weicheckbox" class="check-box">
				
				</div>
			
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">选择推荐位：</label>
			<div class="formControls col-10 skin-minimal" id="recommendposition"></div>
		</div>		
		<div class="row cl">
			<label class="form-label col-2">SEO标题：</label>
			<div class="formControls col-8">
				<input type="text" class="input-text " value="" placeholder="标题不要超过50字" id="seo_title" name="title" nullmsg="title不能为空"  datatype="*2-50" errormsg="限2-50字"/>
			</div><div class="col-2"></div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">关键词：</label>
			<div class="formControls col-8">
				<input type="text" class="input-text" value="" placeholder="多个关键词间请用“,”区分开......" id="keywords" name="keywords">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">文章简介：</label>
			<div class="formControls col-8">
				<textarea name="description" id="seo_desc" cols="" rows="" class="textarea"  placeholder="请输入本资讯的内容简介..." datatype="*10-200" dragonfly="true" nullmsg="简介不能为空！" onKeyUp="textarealength(this,200)" errormsg="限10-200字" ></textarea>
				<p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
			</div><div class="col-2"></div>
		</div>		
		<div class="row cl">
			<label class="form-label col-2">详细内容：</label>
			<div class="formControls col-8"> 				
				<textarea nullmsg="详细内容不能为空！" style="width:100%;height:400px;" id="editor" name="content" datatype="*"></textarea>
			</div><div class="col-3"></div>
		</div>
		<div class="row cl">
			<div class="col-10 col-offset-2">
				<button id="save" class="btn btn-primary radius" type="button"><i class="Hui-iconfont">&#xe632;</i> 保存</button>				
				<button onClick="layer_close();" class="btn btn-default radius" type="button">&nbsp;&nbsp;取消&nbsp;&nbsp;</button>
			</div>
		</div>
	</form>
</div>
<!--悬浮框按钮-->
<div class="pos-f pof-floating">
    <ul>
   		<a href="javascript:;" onClick="gArticle.openAdd('数据批量替换','../shortcuts/replacement-data.html','900','500')"><li class="floating1"></li></a>
        <a href="javascript:;" onClick="gArticle.openAdd('素材库','../shortcuts/source-material.html','900','560')"><li class="floating2"></li></a>        
        <a href="javascript:;" onClick="window.scrollTo(0,0);return false"><li class="floating4"></li></a>
    </ul>
</div>
<input type="hidden" name="click_count" id="click_count" value=""/>
<input type="hidden" name="plushtime" id="plushtime" value=""/>
