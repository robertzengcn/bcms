	public function docdetail(){
		if($_REQUEST['id'] != 0){
			$id = isset($_REQUEST['id']) ? $_REQUEST['id'] : '';
			$doctor = new ResDoctor();
			$department = new ResDepartment();
			$doc = new ResDoctorService();
			$dep = new ResDepartmentService();
