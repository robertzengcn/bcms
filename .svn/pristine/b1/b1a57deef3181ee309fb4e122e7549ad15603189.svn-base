<title>新增环境信息</title>
</head>
<body>
<div class="pd-20">
	<form action="" method="post" class="form form-horizontal" id="formEdit">
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>环境标题：</label>
			<div class="formControls col-9">
			    <input type="hidden" id="id" name="id" value="">
				<input type="text" class="input-text" value="" placeholder="" check="must" nullmsg="标题不能为空" id="subject" name="subject" datatype="*2-50" errormsg="限2-50字" />
			</div><div class="col-2"> </div>
		</div>		
		<div class="row cl">
			<label class="form-label col-2">SEO标题：</label>
			<div class="formControls col-9">
				<input type="text" class="input-text " value="" placeholder="标题不要超过50字" id="seo_title" name="title" errormsg="限2-50字" datatype="*2-50" nullmsg="title不能为空"/>
			</div><div class="col-2"> </div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">关键词：</label>
			<div class="formControls col-9">
				<input type="text" class="input-text" value="" placeholder="多个关键词间请用“,”区分开......" id="keywords" name="keywords">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">环境简介：</label>
			<div class="formControls col-9">
				<textarea name="description" id="seo_desc" cols="" rows="" class="textarea"  placeholder="环境简介..." datatype="*10-200" dragonfly="true" nullmsg="简介不能为空！" onKeyUp="textarealength(this,200)" errormsg="限10-200字"></textarea>
				<p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
			</div><div class="col-2"> </div>
		</div>
		
		<div class="row cl">
			<label class="form-label col-2">缩略图：</label>						
			<div class="formControls col-91">
				<a class="btn btn-primary radius" onClick="layer_show('上传图片','../js/boyicms/uploadimg.html?method=uploadPic&dir=environment','720','460')" href="javascript:;"><i class="Hui-iconfont">&#xe600;</i> 上传图片</a>
			</div>
			<div class="thumbnailbox">
				<img src="../images/boyicms/logo/thumbnail_auto.gif" flag="../images/boyicms/logo/thumbnail_auto.gif" id="thumbnail" width="150px"/><div class="img-btn"><span class="cancel" id="delete-thisimg">删除</span></div>
			</div> 			
			<div class="formControls col-94"><input type="hidden" id="pic" name="pic" value="" datatype="*" nullmsg="环境图片不能为空！" /></div><div class="col-3"> </div>
		</div><!--上传图片-->
		
		<div class="row cl">
			<label class="form-label col-2">详细内容：</label>
			<div class="formControls col-9"> 
				<textarea nullmsg="正文不能为空！" style="width:100%;height:400px;" id="editor" name="content" datatype="*"></textarea>
			</div><div class="col-2"> </div>
		</div>
		<div class="row cl">
			<div class="col-10 col-offset-2">
				<button class="btn btn-primary radius" type="button" id="save"><i class="Hui-iconfont">&#xe632;</i> 保存</button>				
				<button class="btn btn-default radius" type="button" id="back">&nbsp;&nbsp;取消&nbsp;&nbsp;</button>
			</div>
		</div>
	</form>
</div>
<!--悬浮框按钮-->
<div class="pos-f pof-floating">
    <ul>
   		<a href="javascript:;" onClick="gEnvironment.openAdd('数据批量替换','../shortcuts/replacement-data.html','900','500')"><li class="floating1"></li></a>
