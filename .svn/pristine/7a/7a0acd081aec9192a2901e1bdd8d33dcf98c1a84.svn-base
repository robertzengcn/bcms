<title>添加视频</title>
</head>
<body>
<div class="pd-20">
	<form action="" method="post" class="form form-horizontal" id="formEdit">
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>视频名称：</label>
			<div class="formControls col-8">
			    <input type="hidden" id="id" name="id" value="">
				<input type="text" class="input-text" value="" placeholder="" name="subject" datatype="*2-50" nullmsg="名称不能为空"  errormsg="限2-50个字" />
			</div>
			<div class="col-2"> </div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">缩略图：</label>						
			<div class="formControls col-91">
				<a class="btn btn-primary radius" onClick="layer_show('上传图片','../js/boyicms/uploadimg.html?method=uploadPic&dir=movie','720','460')" href="javascript:;"><i class="Hui-iconfont">&#xe600;</i> 上传图片</a>
			</div>
			<div class="thumbnailbox">
				<img src="../images/boyicms/logo/thumbnail_auto.gif" flag="../images/boyicms/logo/thumbnail_auto.gif" id="thumbnail" width="150px"/><div class="img-btn"><span class="cancel" id="delete-thisimg">删除</span></div>
			</div>
			<div class="formControls col-94"><input type="hidden" id="pic" name="pic" value="" datatype="*" nullmsg="视频封面图不能为空！" /></div><div class="col-3"> </div> 			
            <input id="click_count" type="hidden" name="click_count">
            <input id="plushtime" type="hidden" name="plushtime">
		</div><!--上传图片-->
		<div class="row cl">
			<label class="form-label col-2">视频标识：</label>
			<div class="formControls col-8">
				<input type="text" class="input-text" value="" placeholder="限英文2-10个字母" name="flag" datatype="/^(|[a-zA-Z]{2,10})$/" errormsg="标识格式错误">
			</div>
			<div class="col-3"> </div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">视频地址：</label>
			<div class="formControls col-8">
				<input type="text" class="input-text" value="" placeholder="请输入优酷等第三方站点视频分享地址，如：http://www.tudou.com/v/Zep22A6PMnM/&resourceId=0_04_05_99/v.swf" nullmsg="视频地址不能为空" name="link" datatype="*2-150" errormsg="视频地址格式错误">
			</div>
			<div class="col-3"> </div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">视频简介：</label>
			<div class="formControls col-8">
				<textarea name="description" cols="" rows="" class="textarea"  placeholder="请输入视频简介..." datatype="*10-200" dragonfly="true" nullmsg="简介不能为空！" onKeyUp="textarealength(this,200)" errormsg="限10-200字" ></textarea>
				<p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
			</div><div class="col-2"></div>
		</div>		
		<div class="row cl">
			<label class="form-label col-2">详细内容：</label>
			<div class="formControls col-8"> 				
				<textarea nullmsg="详细内容不能为空！" style="width:100%;height:400px;" id="editor" name="content" datatype="*"></textarea> 
			</div><div class="col-3"> </div>
		</div>
		<div class="row cl">
			<div class="col-8 col-offset-2">
				<button class="btn btn-primary radius" type="button" id="save"><i class="Hui-iconfont">&#xe632;</i> 保存</button>				
				<button class="btn btn-default radius" type="button" id="back">&nbsp;&nbsp;取消&nbsp;&nbsp;</button>
			</div>
		</div>
	</form>
</div>
<!--悬浮框按钮-->
<div class="pos-f pof-floating">
    <ul>
   		<a href="javascript:;" onClick="gMovie.openAdd('数据批量替换','../shortcuts/replacement-data.html','900','500')"><li class="floating1"></li></a>
        <a href="javascript:;" onClick="gMovie.openAdd('素材库','../shortcuts/source-material.html','900','560')"><li class="floating2"></li></a>        
        <a href="javascript:;" onClick="window.scrollTo(0,0);return false"><li class="floating4"></li></a>
    </ul>
</div>
<input id="plushtime" type="hidden" name="plushtime"/>
<input type="hidden" name="click_count" id="click_count" value=""/>
<script type="text/javascript" src="../lib/jquery/1.9.1/jquery.min.js"></script> 
