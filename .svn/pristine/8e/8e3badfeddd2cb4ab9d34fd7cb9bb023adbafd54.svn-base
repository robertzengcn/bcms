<title>新增资讯文章</title>
</head>
<body>
<div class="pd-20">
	<form action="" method="post" class="form form-horizontal" id="formEdit">
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>资讯标题：</label>
			<div class="formControls col-10">
				<input type="hidden" id="id" name="id" value=""/>
				<input type="hidden" name="channel_id" id='channel_id' value="">
				<input type="text" class="input-text" value="" placeholder="" id="subject" name="subject" nullmsg="标题不能为空" datatype="*2-90"/>
			</div><div class="col-2"> </div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">选择推荐位：</label>
			<div class="formControls col-10 skin-minimal" id="recommendposition"></div>
		</div>	
		<div class="row cl">
			<label class="form-label col-2">文章来源：</label>
			<div class="formControls col-10">			
				<input type="text" class="input-text" value="" placeholder="一般为本网站名称或域名" id="source" name="source" nullmsg="" datatype="*2-90"/>
			</div>
		</div>	
		<div class="row cl">
			<label class="form-label col-2">SEO标题：</label>
			<div class="formControls col-10">
				<input type="text" class="input-text " value="" placeholder="标题不要超过50字" id="seo_title" name="title" >
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">关键词：</label>
			<div class="formControls col-10">
				<input type="text" class="input-text" value="" placeholder="多个关键词间请用“,”区分开......" id="keywords" name="keywords">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">内容简介：</label>
			<div class="formControls col-10">
				<textarea name="description" id="seo_desc"  name="" cols="" rows="" class="textarea"  placeholder="请输入该资讯的内容简介..." datatype="*10-200" dragonfly="true" nullmsg="简介不能为空！" onKeyUp="textarealength(this,200)"></textarea>
				<p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
			</div><div class="col-2"> </div>
		</div>

		<div class="row cl">
			<label class="form-label col-2">缩略图：</label>						
			<div class="formControls col-91">
				<a class="btn btn-primary radius" onClick="layer_show('上传图片','../js/boyicms/uploadimg.html?method=uploadPic&dir=article','720','460')" href="javascript:;"><i class="Hui-iconfont">&#xe600;</i> 上传图片</a>
			</div>
			<div class="thumbnailbox">
				<img src="../images/boyicms/logo/thumbnail_auto.gif" flag="../images/boyicms/logo/thumbnail_auto.gif" id="thumbnail" width="150px"/><div class="img-btn"><span class="cancel" id="delete-thisimg">删除</span></div>
			</div> 
			<input type="hidden" id='pic' name="pic" value=""/>
		</div><!--上传图片-->
		<div class="row cl">
			<label class="form-label col-2">详细内容：</label>
			<div class="formControls col-10"> 
				<script id="editor" type="text/plain" style="width:100%;height:400px;"  nullmsg="文章正文不能为空！" name="content" ></script> 
			</div>
		</div>
		<div class="row cl">
			<div class="col-10 col-offset-2">
				<button id="save" class="btn btn-primary radius" type="button"><i class="Hui-iconfont">&#xe632;</i> 保存</button>				
				<button id="back" class="btn btn-default radius" type="button">&nbsp;&nbsp;取消&nbsp;&nbsp;</button>
			</div>
		</div>
	</form>
</div>
<script type="text/javascript" src="../lib/jquery/1.9.1/jquery.min.js"></script> 
<script type="text/javascript" src="../lib/layer/1.9.3/layer.js"></script> 
<script type="text/javascript" src="../lib/My97DatePicker/WdatePicker.js"></script> 
<script type="text/javascript" src="../lib/icheck/jquery.icheck.min.js"></script> 
<script type="text/javascript" src="../lib/Validform/5.3.2/Validform.min.js"></script> 
<script type="text/javascript" src="../lib/webuploader/0.1.5/webuploader.min.js"></script> 
<script type="text/javascript" src="../lib/ueditor/1.4.3/ueditor.config.js"></script> 
<script type="text/javascript" src="../lib/ueditor/1.4.3/ueditor.all.min.js"> </script> 
<script type="text/javascript" src="../lib/ueditor/1.4.3/lang/zh-cn/zh-cn.js"></script> 
<script type="text/javascript" src="../js/H-ui.js"></script> 
<script type="text/javascript" src="../js/H-ui.admin.js"></script> 
<script type="text/javascript" src="../js/boyicms/common.js"></script>
<script type="text/javascript" src="../js/boyicms/channelarticle.js"></script>
<script type="text/javascript">
var editor = UE.getEditor('editor');
var gChannelArticle = new ChannelArticle();
gChannelArticle.setThisName('gChannelArticle');
gChannelArticle.initEdit();
$(function(){
	$('.skin-minimal input').iCheck({
		checkboxClass: 'icheckbox-blue',
		radioClass: 'iradio-blue',
		increaseArea: '20%'
	});
});

</script>
</body>
</html>