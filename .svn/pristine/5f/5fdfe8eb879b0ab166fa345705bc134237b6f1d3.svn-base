<title>新增友链</title>
</head>
<body>
<div class="pd-20">
	<form action="" method="post" class="form form-horizontal" id="formEdit">
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>友链名称：</label>
			<div class="formControls col-7">
			    <input type="hidden" id="id" name="id" value="">
				<input type="text" class="input-text" value="" placeholder="" id="name" name="name" nullmsg="名称不能为空" datatype="*2-15" errormsg="限2-15个字" />
			</div><div class="col-2"></div>
		</div>
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>对方网址：</label>
			<div class="formControls col-7">
				<input type="text" class="input-text" value="" placeholder="" id="url" name="url" datatype="*" nullmsg="网址不能为空"/>
			</div><div class="col-2"></div>
		</div>
		<div class="row cl">
			<label class="form-label col-2">排序：</label>
			<div class="formControls col-94">
				<input type="text" class="input-text" value="1" placeholder="" id="sort" name="sort" datatype="INTS" nullmsg="不能为空"  errormsg="限大于零的整数"/>
			</div><div class="col-2"></div>			
			<label class="form-label col-80">显示：</label>
			<div class="formControls col-91 skin-minimal"><!--add col-92 css-->
				<div class="radio-box">
					<input type="radio" id="isdisplay_1" name="isdisplay" value="1" checked="checked"/>
					<label for="isdisplay_1">是</label>
				</div>
				<div class="radio-box">
					<input type="radio" id="isdisplay_0" name="isdisplay" value="0"/>
					<label for="isdisplay_0">否</label>
				</div>
			</div>			
		</div>
		<div class="row cl">
			<div class="col-10 col-offset-2">
				<button class="btn btn-primary radius bt-normal" type="button" id="save"><i class="Hui-iconfont">&#xe632;</i> 保存</button>				
				<button class="btn btn-default radius bt-normal" type="button" id="back">&nbsp;&nbsp;取消&nbsp;&nbsp;</button>
			</div>
		</div>
	</form>
</div>
<script type="text/javascript" src="../lib/jquery/1.9.1/jquery.min.js"></script> 
